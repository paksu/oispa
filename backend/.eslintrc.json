{
  "root": true,
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "env": {
    "node": true
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "max-len": ["warn", 120],
    "func-names": "off",
    "space-before-function-paren": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "import/prefer-default-export": "off",
    "one-var": "off",
    "one-var-declaration-per-line": "off",
    "newline-per-chained-call": "off"
  }
}
